<table class="<?= $response['params']['params']; ?> table table-hover-custom table-responsive table-bordered table-striped">
  <thead>
  <tr>
      <?php foreach ($response['data'][0] as $key => $column) {
          if ($key === 'id') continue;  ?>
        <th><?= $key; ?></th>
      <?php } ?>
  </tr>
  </thead>
  <tfoot>
  <tr>
