  </tr>
  </tfoot>
  <tbody class="row-element">
  <?php foreach ($response['data'] as $row) { ?>
    <tr class="edit-row"
        data-toggle="modal"
        data-target="#add-edit-popup-modal"
        <?php foreach ($row as $key => $column) { ?>
          data-<?= $this->camelCaseToHyphen($key); ?>="<?= $column; ?>"
        <?php } ?>
